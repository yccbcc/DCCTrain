/* pages/CV/cv.wxss */
@import "/pages/common/electric/electric.wxss";

#cvBoxBgView {
  width: 100;
  display: flex;
  justify-content: center;
}

#cvBox {
  margin-top: 80rpx;
  margin-bottom: 50rpx;
  width: 90%;
  border: solid 4rpx lightgray;
  position: relative;
  border-radius: 19rpx;
}

#cvBox>text:first-child {
  display: inline-block;
  height: 30rpx;
  position: relative;
  top: -34rpx;
  background-color: #fff;
  margin-left: 20rpx;
  font-size: 30rpx;
}

#cvContentView {
  position: relative;
  top: -20rpx;
  display: flex;
  flex-direction: column;
}

#cvContent-topView {
  display: flex;
  flex-direction: row;
  width: 100%;
}

#cvContent-topView>view {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

#cvContent-topView>view:first-child input {
  width: 150rpx;
  height: 60rpx;
  border: solid 4rpx lightgray;
  border-radius: 8rpx;
  margin-left: 20rpx;
}

#cvContent-topView>view:last-child view {
  width: 100rpx;
  height: 60rpx;
  border: solid 4rpx black;
  background-color: lightgray;
  margin-left: 30rpx;
  border-radius: 8rpx;
  text-align: center;
}

#cvContent-bottom {
  display: flex;
  flex-direction: row;
}



.group{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  flex-wrap: wrap;
}
.group>view{
  margin-left: 5rpx;
}

.electric_topBgView{
  position: relative;
}
.electric_topBgView input{
  width: 200rpx;
  height: 80rpx;
  border: solid 4rpx lightgray;
  border-radius: 8rpx;
}
