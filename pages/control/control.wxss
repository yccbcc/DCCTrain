/* pages/control/control.wxss */
@import "/pages/common/electric/electric.wxss";

/* 中间视图 middleView */

.midView {
  position: fixed;
  width: 100%;
  padding-left: 30rpx;
  padding-right: 30rpx;
  display: flex;
  flex-direction: row;
  top: 60px;
  box-sizing: border-box;
}

/* 中间视图 左侧 */

.mid-leftView {
  display: flex;
  flex-direction: column;
  width: 30%;
}

.mid-left-topView {
  display: flex;
  flex-direction: column;
}

.mid-left-bottomSv {
  display: flex;
  flex-direction: column;
}

.mid-left-bottomSv-cell {
  font-size: 28rpx;
  height: 40px;
  line-height: 40px;
  border-bottom: solid 2rpx lightgray;
}

.mid-rightView {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 70%;
  height: 100%;
}

.mid-right-topView {
  display: flex;
  width: 100%;
  flex-basis: 100rpx;
  flex-grow: 0;
  flex-shrink: 0;
}

.mid-right-bottomView {
  display: flex;
  flex-direction: row;
  width: 100%;
  padding-top: 10px;
  box-sizing: border-box;
}

.mid-right-bottom-leftView {
  width: 30%;
  flex-shrink: 0;
}

.mid-right-bottom-leftView>view:first-child {
  margin: 2%;
  width: 96%;
  height: 40px;
  border: solid 2px lightgray;
  box-sizing: border-box;
  text-align: center;
  line-height: 36px;
  border-radius: 4px;
}
.mid-right-bottom-leftView>view:last-child{
  display: flex;
  flex-direction: row;
  margin-top: 15px;
}

.slipView{
width: 50%;
height: 150px;
}
canvas{
  margin-left: 5%;
  margin-right: 5%;
  width: 90%;
  height: 180px;
  background-color: lightgray;
  position: relative;
}
canvas view{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

.mid-righ-bottom-left-IIIV{
display: flex;
flex-direction: column;
width: 50%;
}

.mid-righ-bottom-left-IIIV view{
  margin-bottom: 10px;
  border: solid 2px lightgray;
  border-radius: 4px;
  height: 30px;
  line-height: 30px;
  text-align: center;
}

.mid-right-bottom-rightView {
  margin-left: 2%;
  width: 68%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.mid-right-bottom-rightView view{
width: 20%;
margin-left: 5%;
height: 30px;
border: solid 2px lightgray;
border-radius: 4px;
box-sizing: border-box;
font-size: 13px;
text-align: center;
line-height: 26px;
}

/* bottomView */

.bottomView {
  position: fixed;
  width: 80%;
  height: 80px;
  padding: 5px 10% 5px 10%;
  display: flex;
  flex-direction: row;
  bottom: 0;
}

/* ^ F0 停止---- BG */

.bottomView>view:first-child {
  display: flex;
  flex-direction: column;
  flex-grow: 2;
  height: 80px;
  margin-right: 2px;
}

/* ^ F0 ---- BG */

.bottomView>view:first-child>view:first-child {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 39px;
  margin-bottom: 2px;
}

/* ^ */

.bottomView>view:first-child>view:first-child>view:first-child {
  display: flex;
  width: 60%;
  margin-right: 1%;
  height: 100%;
  border: solid 4rpx slategray;
  border-radius: 8rpx;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
}

/* F0 */

.bottomView>view:first-child>view:first-child>view:last-child {
  display: flex;
  width: 39%;
  height: 100%;
  border: solid 4rpx slategray;
  border-radius: 8rpx;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
}

/* 停止 */

.bottomView>view:first-child>view:last-child {
  display: flex;
  width: 100%;
  height: 39px;
  border: solid 4rpx slategray;
  border-radius: 8rpx;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
}

/* 最右侧 << >> */

.bottomView>view:last-child {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border: solid 4rpx slategray;
  border-radius: 8rpx;
  flex-grow: 1;
  box-sizing: border-box;
  height: 100%;
  font-size: 25px;
}
